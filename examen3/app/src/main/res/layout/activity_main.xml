<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Imagen superior -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY" />

    <!-- EditText para el nombre -->
    <EditText
        android:id="@+id/editNombre"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu nombre"
        android:background="@android:drawable/editbox_background" />

    <!-- EditTexts para las letras -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <EditText
            android:id="@+id/editChar1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:background="@android:drawable/editbox_background" />

        <EditText
            android:id="@+id/editChar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:background="@android:drawable/editbox_background" />

        <EditText
            android:id="@+id/editChar3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:background="@android:drawable/editbox_background" />

        <EditText
            android:id="@+id/editChar4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:background="@android:drawable/editbox_background" />

        <EditText
            android:id="@+id/editChar5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>

    <!-- Texto para mostrar aciertos -->
    <TextView
        android:id="@+id/textAciertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aciertos: 0"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <!-- Botones para comenzar y validar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonComenzar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comenzar" />

        <Button
            android:id="@+id/buttonValidar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Validar" />
    </LinearLayout>

</LinearLayout>
